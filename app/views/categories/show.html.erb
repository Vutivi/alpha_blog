<h2 align="center"><%= @category.name%></h2>
<div class = "row">
  <div class="col-md-4 col-md-offset-4 center">
    <% if logged_in? & current_user.admin? %>
      <div class="user-actions">
          <%= link_to "Edit this category", edit_category_path, class: "btn btn-xs btn-primary"%>
          <%= link_to "Delete this category", category_path(@category), method: :delete, data: \
          { confirm: 'Are you certain you want to delete this user?' }, class: "btn btn-xs btn-danger" %>
      </div>
      <% end %>
  </div>
</div>
<hr>
<h4 align="center">Articles under <%= @category.name%> category</h4>
<%= will_paginate @category_articles %>
<%= render 'articles/articles_list', obj: @category.articles %>
<%= will_paginate @category_articles %>
